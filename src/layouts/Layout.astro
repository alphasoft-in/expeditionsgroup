---
import "../styles/global.css";
import Navbar from "../components/Navbar.jsx";
import Footer from "../components/Footer.jsx";
import WhatsAppButton from "../components/WhatsAppButton.jsx";
import logo from "../assets/nuevo-logo.avif";
import { getImage } from "astro:assets";

const optimizedLogo = await getImage({
	src: logo,
	width: 300,
	quality: 70,
});

interface Props {
	title: string;
	description?: string;
	image?: string;
	preloadImage?: string;
	preloadImageMobile?: string;
	showNavbar?: boolean;
	showFooter?: boolean;
	showWhatsApp?: boolean;
}

const {
	title,
	description = "Expeditions Group - Tu agencia de viajes de confianza para turismo escolar, corporativo y familiar.",
	image = "/about.avif",
	preloadImage,
	preloadImageMobile,
	showNavbar = true,
	showFooter = true,
	showWhatsApp = true,
} = Astro.props;

const siteBase = Astro.site || "https://www.expeditionsgroupsac.com";
const canonicalURL = new URL(Astro.url.pathname, siteBase);
const socialImageURL = new URL(image, siteBase);
const logoURL = new URL(optimizedLogo.src, siteBase);
---

<!doctype html>
<html lang="es" class="overflow-x-hidden">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<meta name="generator" content={Astro.generator} />

		<!-- SEO Principal -->
		<title>{title}</title>
		<meta name="title" content={title} />
		<meta name="description" content={description} />
		<link rel="canonical" href={canonicalURL} />

		<!-- Open Graph / Facebook -->
		<meta property="og:type" content="website" />
		<meta property="og:site_name" content="Expeditions Group" />
		<meta property="og:url" content={canonicalURL} />
		<meta property="og:title" content={title} />
		<meta property="og:description" content={description} />
		<meta property="og:image" content={socialImageURL} />

		<!-- Twitter -->
		<meta property="twitter:card" content="summary_large_image" />
		<meta property="twitter:url" content={canonicalURL} />
		<meta property="twitter:title" content={title} />
		<meta property="twitter:description" content={description} />
		<meta property="twitter:image" content={socialImageURL} />

		<!-- Favicon -->
		<link rel="icon" href="/favicon.ico" type="image/x-icon" />
		<link rel="apple-touch-icon" href="/apple-touch-icon.png" />
		<link
			rel="apple-touch-icon"
			sizes="180x180"
			href="/apple-touch-icon.png"
		/>
		<link
			rel="icon"
			type="image/png"
			sizes="32x32"
			href="/favicon-32x32.png"
		/>
		<link
			rel="icon"
			type="image/png"
			sizes="16x16"
			href="/favicon-16x16.png"
		/>
		<link
			rel="manifest"
			href="/site.webmanifest"
			crossorigin="use-credentials"
		/>

		<!-- JSON-LD Structured Data (Organization) -->
		<script type="application/ld+json" is:inline define:vars={{ logoURL: logoURL.href }}>
			{
				"@context": "https://schema.org",
				"@type": "TravelAgency",
				"name": "Expeditions Group",
				"image": logoURL,
				"@id": "https://www.expeditionsgroupsac.com",
				"url": "https://www.expeditionsgroupsac.com",
				"telephone": "+51996667974",
				"address": {
					"@type": "PostalAddress",
					"streetAddress": "Av. Larco 345 oficina S1",
					"addressLocality": "Miraflores",
					"addressRegion": "Lima",
					"postalCode": "15074",
					"addressCountry": "PE"
				},
				"description": "Agencia de viajes especializada en turismo escolar, corporativo y familiar. Paquetes nacionales e internacionales todo incluido."
			}
		</script>

		<!-- Accesibilidad y mejoras UX -->
		<meta name="theme-color" content="#0f172a" />

		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;500;600;700&display=swap"
			rel="stylesheet"
		/>
		{
			preloadImageMobile && (
				<link
					rel="preload"
					as="image"
					href={preloadImageMobile}
					media="(max-width: 768px)"
				/>
			)
		}
		{
			preloadImage && (
				<link
					rel="preload"
					as="image"
					href={preloadImage}
					media={
						preloadImageMobile ? "(min-width: 769px)" : undefined
					}
				/>
			)
		}
	</head>
	<body class="bg-light text-accent overflow-x-hidden">
		{
			showNavbar && (
				<Navbar
					client:load
					logo={optimizedLogo.src}
					logoWidth={optimizedLogo.attributes.width}
					logoHeight={optimizedLogo.attributes.height}
				/>
			)
		}
		<slot />
		{
			showFooter && (
				<Footer
					client:visible
					logo={optimizedLogo.src}
					logoWidth={optimizedLogo.attributes.width}
					logoHeight={optimizedLogo.attributes.height}
				/>
			)
		}
		{showWhatsApp && <WhatsAppButton client:idle />}
	</body>
</html>
