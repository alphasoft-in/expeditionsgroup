---
import Layout from "../layouts/Layout.astro";
import PageHeader from "../components/PageHeader.jsx";
import ContactContent from "../components/ContactContent.jsx";

// Using a reusable asset for consistency, or update if a specific contact image is available
import heroBg from "../assets/about.avif";
import { getImage } from "astro:assets";

const optimizedHeroBg = await getImage({
    src: heroBg,
    format: "avif",
    width: 1920,
    quality: 80,
});
---

<Layout title="Contáctanos | Expeditions Group">
    <main class="bg-gray-50 min-h-screen">
        <PageHeader
            title="Contáctanos"
            subtitle="Estamos aquí para planificar tu próxima gran aventura. ¡Escríbenos hoy!"
            image={optimizedHeroBg.src}
            client:load
        />

        <ContactContent client:visible />
    </main>
</Layout>
