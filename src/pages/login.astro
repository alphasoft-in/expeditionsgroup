---
import "../styles/global.css";
import LoginForm from "../components/LoginForm.jsx";
import logo from "../assets/logo-cuadrado.avif";
import { getImage } from "astro:assets";

const optimizedLogo = await getImage({
    src: logo,
    format: "avif",
    width: 300,
    quality: 90,
});
---

<!doctype html>
<html lang="es">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <!-- Favicon -->
        <link rel="icon" href="/favicon.ico" type="image/x-icon" />
        <link rel="apple-touch-icon" href="/apple-touch-icon.png" />

        <!-- Accesibilidad y mejoras UX -->
        <meta name="theme-color" content="#0f172a" />

        <link
            rel="apple-touch-icon"
            sizes="180x180"
            href="/apple-touch-icon.png"
        />
        <link
            rel="icon"
            type="image/png"
            sizes="32x32"
            href="/favicon-32x32.png"
        />
        <link
            rel="icon"
            type="image/png"
            sizes="16x16"
            href="/favicon-16x16.png"
        />
        <link rel="manifest" href="/site.webmanifest" />
        <title>Iniciar Sesi√≥n | Expeditions Group</title>
    </head>
    <body class="bg-slate-50 text-slate-800">
        <main
            class="min-h-screen flex items-center justify-center p-4 relative overflow-hidden"
        >
            {/* Decorative Background Elements */}
            <div
                class="absolute top-0 left-0 w-full h-full overflow-hidden pointer-events-none"
            >
                <div
                    class="absolute -top-24 -right-24 w-96 h-96 bg-secondary/10 rounded-full blur-3xl"
                >
                </div>
                <div
                    class="absolute top-1/2 -left-24 w-72 h-72 bg-primary/10 rounded-full blur-3xl"
                >
                </div>
                <div
                    class="absolute bottom-0 right-1/4 w-64 h-64 bg-tertiary/10 rounded-full blur-3xl"
                >
                </div>
            </div>

            <div class="relative z-10 w-full max-w-md">
                <div class="text-center mb-8">
                    <div class="inline-block relative group">
                        <img
                            src={optimizedLogo.src}
                            alt="Expeditions Group Logo"
                            class="w-24 sm:w-32 h-auto mx-auto object-contain hover:scale-105 transition-transform duration-300"
                        />
                    </div>
                </div>

                <LoginForm client:load />

                <div class="text-center mt-8">
                    {
                        /* Removed "Volver al Inicio" link as per "standalone" nature, or keep it but maybe it closes the tab? 
                         Usually if opened in blank, closing is the way, but a link to home is harmless. 
                         I'll keep it as a regular link to home, but styling it properly. 
                     */
                    }
                    <div class="text-slate-400 text-sm">
                        &copy; 2026 Expeditions Group
                    </div>
                </div>
            </div>
        </main>
    </body>
</html>
