---
import Layout from "../layouts/Layout.astro";
import PageHeader from "../components/PageHeader";
import PrivacyContent from "../components/PrivacyContent";

// Reusing an asset for the background to maintain consistency
import heroBg from "../assets/about.avif";
import { getImage } from "astro:assets";

const optimizedHeroBg = await getImage({
    src: heroBg,
    format: "avif",
    width: 1920,
    quality: 80,
});
---

<Layout title="Política de Privacidad | Expeditions Group">
    <main class="bg-gray-50 min-h-screen">
        {/* Header - Compact */}
        <PageHeader
            title="Política de Privacidad"
            subtitle="Comprometidos con la seguridad y protección de sus datos personales."
            image={optimizedHeroBg.src}
            client:load
        />

        <PrivacyContent client:visible />
    </main>
</Layout>
